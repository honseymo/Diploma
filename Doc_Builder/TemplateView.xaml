        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="191*"/>
                <ColumnDefinition Width="183*"/>
            </Grid.ColumnDefinitions>

            <DocumentViewer HorizontalAlignment="Left" Margin="0,49,0,0" Background="#2a2a2e"

                    Name="documentViewer1" VerticalAlignment="Top" Grid.ColumnSpan="3" />

            <TextBox Height="29" HorizontalAlignment="Left" Margin="6,6,0,0"

             Name="SelectedFileTextBox" VerticalAlignment="Top" Width="276" Background="#2a2a2e" Grid.ColumnSpan="2"/>

        </Grid>
    </Grid>
